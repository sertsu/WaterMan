<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/irrigationID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:text="@string/irrigation"
        android:textColor="@color/black"
        app:icon="@drawable/irrigation"
        app:iconSize="123dp"
        app:iconTint="@color/black"
        app:iconTintMode="src_atop" />

    <Button
        android:id="@+id/poolID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:text="@string/pool"
        android:textColor="@color/black"
        app:icon="@drawable/pool"
        app:iconSize="123dp"
        app:iconTint="@color/black"
        app:iconTintMode="src_atop" />

    <Button
        android:id="@+id/saunaID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:text="@string/sauna"
        android:textColor="@color/black"
        app:icon="@drawable/saune"
        app:iconSize="123dp"
        app:iconTint="@color/black"
        app:iconTintMode="src_atop" />

    <GridLayout
        android:id="@+id/irrigation_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:visibility="gone">

        <ToggleButton
            android:id="@+id/acceptAutoIrrigationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/accept_auto_btntoggle"
            android:textColorHint="@color/blue"
            android:textOff="@string/autowatering_disallowed"
            android:textOn="@string/autowatering_allowed" />


        <ToggleButton
            android:id="@+id/irrigatingManualButton"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_margin="3dp"
            android:background="@drawable/btntoggle"
            android:textOff="@string/manual_irrigation_off"
            android:textOn="@string/manual_irrigation_on" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/irrigatingNowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textColor="#007700"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/realTimeIrrigationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:text="@string/valve_condition"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:gravity="center"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/irrigationValve1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/my_btn_toggle"
                android:textOff="@string/first"
                android:textOn="@string/first" />

            <ToggleButton
                android:id="@+id/irrigationValve2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/my_btn_toggle"
                android:textOff="@string/second"
                android:textOn="@string/second" />

            <ToggleButton
                android:id="@+id/irrigationValve3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/my_btn_toggle"
                android:textOff="@string/third"
                android:textOn="@string/third" />

            <ToggleButton
                android:id="@+id/irrigationValve4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/my_btn_toggle"
                android:textOff="@string/fourth"
                android:textOn="@string/fourth" />

            <ToggleButton
                android:id="@+id/openAllIrrigationValves"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/my_btn_toggle"
                android:textOff="@string/everything"
                android:textOn="@string/everything" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/watering_time_for_one_zone"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/timeIrrigationPeriodOneZoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/timeIrrigationPeriodOneZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:max="30" />

        <TextView
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:background="#dddddd"
            android:text="@string/start_time_of_watering"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/timeIrrigationBeginHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="number"
                android:text="@string/t_00"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/timeIrrigationBeginMinute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="number"
                android:text="@string/t_00"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/period_weather_request"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/periodRequestWeatherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/periodRequestWeather"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:max="30"
            android:progress="0" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/max_temp"
                android:textAlignment="textEnd"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/tempMax"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="@color/blue" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/last_request"
                android:textAlignment="textEnd"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/lastRequestText"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textAlignment="center"
                android:textColor="@color/blue" />
        </GridLayout>

    </GridLayout>

    <GridLayout
        android:id="@+id/pool_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:visibility="gone">

        <ToggleButton
            android:id="@+id/statePoolValveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/btntoggle"
            android:textColor="@color/blue"
            android:textOff="@string/pool_is_not_to_be_added"
            android:textOn="@string/added_to_the_pool"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/stateHeaterValveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/btntoggle"
            android:textColor="@color/blue"
            android:textOff="@string/pool_heating_off"
            android:textOn="@string/pool_heating_on"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:text="@string/temp_wish_water_pool" />

        <Spinner
            android:id="@+id/degrPool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:entries="@array/degrPool"
            android:textDirection="ltr"
            android:translationY="@dimen/cardview_compat_inset_shadow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:text="@string/temp_current_water_pool" />

        <TextView
            android:id="@+id/temperatureCurrentWaterPoolText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="24sp" />
    </GridLayout>

    <GridLayout
        android:id="@+id/sauna_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:columnCount="1"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center"
            android:text="@string/temp_current_sauna"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="7dp"
            android:columnCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/steamroom" />

            <TextView
                android:id="@+id/steamroomTemperatureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/restroom" />

            <TextView
                android:id="@+id/restroomTemperatureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/bathroom" />

            <TextView
                android:id="@+id/washroomTemperatureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/vestibule" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/outdoor" />

            <TextView
                android:id="@+id/outsideTemperatureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp" />

            <TextView
                android:layout_columnSpan="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/point_detect_temp_floor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/vestibule" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/restroom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/bathroom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp" />
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text="@string/regulator_temp_control_sauna"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wishTemperatureSaunaValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/wishTemperatureSauna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="5"
            android:max="25" />

    </GridLayout>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="@string/backward"
        android:textColor="@color/black"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="@string/update"
        android:textColor="@color/black"
        android:visibility="gone" />

</LinearLayout>